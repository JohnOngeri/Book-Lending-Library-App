<!-- app/views/books/index.html.erb -->
<div class="container mt-5">
  <!-- Header Section with Add New Book Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Book List</h1>
    <%= link_to 'Add New Book', new_book_path, class: 'btn btn-success' %>
  </div>

  <!-- Book Table -->
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td>
            <%= link_to 'Show', book, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
