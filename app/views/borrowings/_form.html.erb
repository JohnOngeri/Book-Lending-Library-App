<%# app/views/borrowings/_form.html.erb %>
<%= form_with(model: @borrowing, local: true, class: 'form') do |f| %>
  <div class="form-group">
    <%= f.label :borrower_name %>
    <%= f.text_field :borrower_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :book_id, 'Book' %>
    <%= f.collection_select :book_id, Book.all, :id, :title, { prompt: 'Select a book' }, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.label :returned_at %>
    <%= f.datetime_select :returned_at, include_blank: true, class: 'form-control' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-success' %>
<% end %>
