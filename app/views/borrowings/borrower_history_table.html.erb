<!-- app/views/borrowings/_borrower_history_table.html.erb -->
<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin-top: 20px;
  }

  th, td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: center;
  }

  th {
    background-color: #f2f2f2;
  }

  tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  tr:hover {
    background-color: #ddd;
  }
</style>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Borrowed At</th>
      <th>Returned At</th>
    </tr>
  </thead>
  <tbody>
    <% @borrowings.each do |borrowing| %>
      <tr>
        <td><%= borrowing.book.title %></td>
        <td><%= borrowing.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= borrowing.updated_at.strftime('%Y-%m-%d') if borrowing.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>